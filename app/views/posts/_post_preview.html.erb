<div class="post">
  <h2 class="post-title"><%= link_to post.title, post_path(post) %></h2>
  <%= render partial: "status_badges", locals: { post: post } %>
  <%= render partial: "tags", locals: {tags: post.tags} %>
  <%= render partial: "date_and_author", locals: { post: post } %>
  <div class="post-body"><%= Post.parse_markdown(post.body) %></div>
  <div class="pull-right">
    <%= link_to 'Read More', post_path(post), class: "btn btn-sm btn-outline-info" %>
    <% if admin_signed_in? %>
      <%= link_to 'Edit', edit_post_path(post), class: "btn btn-sm btn-warning" %>
      <%= link_to 'Destroy', post, method: :delete, class: "btn btn-sm btn-danger", data: { confirm: 'Are you sure?' } %>
    <% end %>
  </div>
</div>
<hr style="width: 95%;"/>
