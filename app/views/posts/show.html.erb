<div class="col-md-2"></div>
<div class="col-md-8">
  <h1 class="post-title"><%= @post.title %></h1>
  <div class="row" style="padding-left: 15px;">
    <% unless @post.published? %>
      <span class="badge badge-warning">Draft</span>
    <% end %>
    <% if @post.created_at >= 1.week.ago.utc %>
      <span class="badge badge-success">New</span>
    <% end %>
  </div>
  <small><span class="light-text open-sans"><%= @post.updated_at.strftime("%B %e, %Y") %> by <%= @post.admin.full_name %></span></small>
  <hr />
  <div class="post-body-full"><%= @body.html_safe %></div>
  <hr />
  <%= link_to '< Back', posts_path, class: "btn btn-md btn-outline-info" %>
  <% if admin_signed_in? %>
    <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-md btn-outline-warning" %>
  <% end %>

  <%= render 'disqus' %>
</div>
<div class="col-md-2"></div>
